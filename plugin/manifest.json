{
  "manifest_version": 2,
  "name": "Flowshot",
  "description": "Flowshot.",
  "version": "1.0.0",
  "browser_action": {
      "default_icon": "icons/icon16.png",
      "default_popup": "popup.html"
  },
  "background": {
      "scripts": [
          "dist/eventPage.js"
      ],
      "persistent": true
  },
  "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
  },
  "content_scripts": [
      {
          "matches": [
              "http://*/*",
              "https://*/*"
          ],
          "js": [
              "dist/contentScript.js"
          ]
      }
  ],
  "web_accessible_resources": [
      "dist/clientScript.js"
  ],
  "permissions": [
      "<all_urls>",
      "tabCapture",
      "storage",
      "tabs"
  ]
}